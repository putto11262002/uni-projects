doctype html
html
    head
        title Birds of Aotearoa
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel="icon", type="image/x-icon", href="/favicon.ico")
        link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet" )
        link(href="/bootstrap-icons/bootstrap-icons.css", rel="stylesheet")
        link(href="/css/custom-style.css",rel="stylesheet")
        script(src="/bootstrap/js/bootstrap.min.js")
    body
        include templates/header
        include templates/sidebar
        include templates/modal_delete
        main(class="container")
            div(class="row p-5")
                div(class="col-12 col-md-7 d-flex justify-content-center align-items-center")
                    img(class="view-bird-img", src=`/images/${bird.photo.source}`)

                div(class="col-12 col-md-5 p-5 d-flex align-items-center flex-column gap-3 justify-content-center")
                    h5()=bird.primary_name
                    ul(class="list-group list-group-flush w-100")
                        li(class="list-group-item  px-0")
                            b English name
                            =" "
                            span=bird.english_name

                        li(class="list-group-item  px-0")
                            b Scientific name
                            =" "
                            span=bird.scientific_name

                        li(class="list-group-item  px-0")
                            b Order
                            =" "
                            span=bird.order

                        li(class="list-group-item  px-0")
                            b Family
                            =" "
                            span=bird.family


                        li(class="list-group-item  px-0")
                            b Status
                            =" "
                            span=bird.status

                        li(class="list-group-item  px-0")
                            b Length
                            =" "
                            span=bird.size.length.value
                            =" "
                            span=bird.size.length.units

                        li(class="list-group-item  px-0")
                            b Weight #{""}
                            span=bird.size.weight.value
                            =" "
                            span=bird.size.weight.units

                    a(href=`/update-bird/${bird.id}`, class="w-100")
                        button(class="btn btn-primary w-100") Update

                    button(class="btn btn-danger w-100", type="button", data-bs-toggle="modal", data-bs-target="#deleteModal") Delete

        include templates/footer



